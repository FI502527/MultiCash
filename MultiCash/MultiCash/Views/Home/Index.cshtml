@{
    ViewData["Title"] = "Home Page";
@model HomeViewModel

}

<div class="text-center">
    @if (Model.Banks.Any())
    {
        foreach(BankAccountViewModel bank in Model.Banks)
        {
            <div class="bank-group">
                <div class="bank-header">
                    @bank.BankType.Name.ToUpper()
                </div>
                <div class="bank-info">
                    <div class="bank-user">
                        @Model.User.Email
                    </div>
                    <div class="bank-money">
                        €@bank.Balance 
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@bank.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8" />
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <span>
            There are no bank accounts linked to your account.
        </span>
    }
</div>
